::selection
	color #fff
	background #4e54c844

*
	padding 0
	margin 0
	position relative
	box-sizing border-box
	text-rendering optimizeLegibility

*.flex
	display flex
	align-items center
	justify-content center

*.noselect
	user-select none

*.nodisplay
	display none

img
	user-drag none
	-webkit-user-drag none
	user-select none

a
	text-decoration none
	color inherit

	&:visited
		color inherit
